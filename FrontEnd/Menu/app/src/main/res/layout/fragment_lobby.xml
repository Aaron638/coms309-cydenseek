<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/tv_player1"
        android:layout_width="128dp"
        android:layout_height="79dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="56dp"
        android:layout_marginTop="24dp"
        android:background="@android:color/holo_orange_light"/>

    <TextView
        android:id="@+id/tv_player2"
        android:layout_width="128dp"
        android:layout_height="79dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/tv_player1"
        android:layout_marginEnd="56dp"
        android:background="@android:color/holo_green_light"/>

    <TextView
        android:id="@+id/tv_player3"
        android:layout_width="128dp"
        android:layout_height="79dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/tv_player1"
        android:layout_marginTop="122dp"
        android:background="@android:color/holo_orange_light"/>

    <TextView
        android:id="@+id/tv_player4"
        android:layout_width="128dp"
        android:layout_height="79dp"
        android:layout_alignStart="@+id/tv_player6"
        android:layout_alignTop="@+id/tv_player3"
        android:background="@android:color/holo_green_light"/>

    <TextView
        android:id="@+id/tv_player5"
        android:layout_width="128dp"
        android:layout_height="79dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/tv_player1"
        android:layout_marginTop="218dp"
        android:background="@android:color/holo_orange_light"/>

    <TextView
        android:id="@+id/tv_player6"
        android:layout_width="128dp"
        android:layout_height="79dp"
        android:layout_alignStart="@+id/tv_player2"
        android:layout_alignTop="@+id/tv_player5"
        android:background="@android:color/holo_green_light"/>

    <TextView
        android:id="@+id/tv_player7"
        android:layout_width="128dp"
        android:layout_height="79dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/tv_player1"
        android:layout_marginBottom="174dp"
        android:background="@android:color/holo_orange_light"/>

    <TextView
        android:id="@+id/tv_player8"
        android:layout_width="128dp"
        android:layout_height="79dp"
        android:layout_alignStart="@+id/tv_player6"
        android:layout_alignTop="@+id/tv_player7"
        android:background="@android:color/holo_green_light"/>

    <TextView
        android:id="@+id/tv_player9"
        android:layout_width="128dp"
        android:layout_height="79dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/tv_player1"
        android:layout_marginBottom="80dp"
        android:background="@android:color/holo_orange_light"/>

    <TextView
        android:id="@+id/tv_player10"
        android:layout_width="128dp"
        android:layout_height="79dp"
        android:layout_alignStart="@+id/tv_player6"
        android:layout_alignTop="@+id/tv_player9"
        android:background="@android:color/holo_green_light"/>

    <Button
        android:id="@+id/btn_lobby_leave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/tv_player7"
        android:layout_marginBottom="21dp"
        android:text="Leave Game" />

    <Button
        android:id="@+id/btn_lobby_swap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tv_player6"
        android:layout_alignTop="@+id/btn_lobby_leave"
        android:text="Swap Teams" />

</RelativeLayout>